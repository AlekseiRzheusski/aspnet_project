
@using WebApiIdentity.Models
@model IEnumerable<AppUser>

@{
    ViewBag.Title = "Index";
}


<div class="panel panel-primary">
    <div class="panel-heading">
        Учетные записи
    </div>
    <table class="table table-striped">
        <tr>
            <td>Id</td>
            <td>Логин</td>
            <td>email</td>
            <td>Фамилия</td>
            <td>Имя</td>
            <td>Отчество</td>
            <td>Класс</td>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" class="text-center">Нет ни одной учетной записи</td>
            </tr>
        }
        else
        {
            foreach (AppUser user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.surname</td>
                    <td>@user.name</td>
                    <td>@user.patronymic</td>
                    <td>@user.classId</td>


                    <td>
                        @using (Html.BeginForm("Delete", "Admin", new { id = user.Id }))
                        {
                            @Html.ActionLink("Изменить", "Edit", new { id = user.Id },
                                new { @class = "btn btn-primary btn", style = "float: left; margin-right: 10px" })
                            <button class="btn btn-danger btn" type="submit">Удалить</button>
                        }
                    </td>
                </tr>
            }
        }
    </table>
</div>
@Html.ActionLink("Добавить ученика", "CreateStudent", null, new { @class = "btn btn-primary" })
@Html.ActionLink("Добавить преподавателя", "CreateTeacher", null, new { @class = "btn btn-primary" })
